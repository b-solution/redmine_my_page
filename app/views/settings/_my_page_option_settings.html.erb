<p>
  <label><%= l(:label_my_activity_enable) %></label>
  <%= check_box_tag 'settings[my_activity_enable]', 1, settings.present? && settings['my_activity_enable'] == '1' %>
  <br />
  <em><%= l(:em_my_activity_enable) %></em>
</p>
<p>
  <label><%= l(:label_homelink_override) %></label>
  <%= check_box_tag 'settings[homelink_override]', 1, settings.present? && settings['homelink_override'] == '1' %>
</p>
<p><%= label_tag "custom_query_ids", l(:label_custom_queries)  %>
  <% queries = IssueQuery.where(visibility:  IssueQuery::VISIBILITY_PUBLIC ).map{|iq| [iq.name, iq.id]} %>
  <%= select_tag  "settings[query_ids][]", options_for_select(queries, settings['query_ids'] ),
                     :multiple =>  true, :size => 10,
                     :id => 'custom_query_ids', :required => true %></p>
</div>
